<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.heyproject.storyapp.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_storyDetailFragment"
            app:destination="@id/storyDetailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_storyAddFragment"
            app:destination="@id/storyAddFragment" />
        <action
            android:id="@+id/action_homeFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/storyDetailFragment"
        android:name="com.heyproject.storyapp.ui.story_detail.StoryDetailFragment"
        android:label="Story Detail"
        tools:layout="@layout/fragment_story_detail">
        <action
            android:id="@+id/action_storyDetailFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="name"
            android:defaultValue="story_name"
            app:argType="string" />
        <argument
            android:name="description"
            android:defaultValue="story_description"
            app:argType="string" />
        <argument
            android:name="photoUrl"
            android:defaultValue="photo_url"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/storyAddFragment"
        android:name="com.heyproject.storyapp.ui.story_add.StoryAddFragment"
        android:label="fragment_story_add"
        tools:layout="@layout/fragment_story_add" >
        <action
            android:id="@+id/action_storyAddFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.heyproject.storyapp.ui.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>